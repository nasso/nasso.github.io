---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Passionate Software Engineer from France"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="m-auto flex max-w-3xl flex-col gap-4 bg-slate-50 py-8 text-slate-950 dark:bg-slate-950 dark:text-slate-50"
  >
    <slot />
  </body>
</html>
